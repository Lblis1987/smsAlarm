<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:background="@color/white">
 
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/setting_is_use_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        
        <TextView android:id="@+id/setting_is_use_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginLeft = "5dp"
            />
        <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/setting_is_use_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="3dp"
	            android:textColor="#000000" />
	    	    
			<Switch
	            android:id="@+id/setting_is_use_switch"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="5dip"
	            android:clickable="false"
	            android:focusable="false"
	            android:textOff="@string/setting_switch_off"
	            android:textOn="@string/setting_switch_on" />

    </RelativeLayout>
        
    </LinearLayout>
 
</LinearLayout>